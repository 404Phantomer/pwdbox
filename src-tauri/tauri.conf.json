{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "PwdBox",
  "version": "0.1.0",
  "identifier": "com.pwdbox.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "PwdBox - Password Manager",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": false,
    "icon": []
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": false
    }
  }
} 